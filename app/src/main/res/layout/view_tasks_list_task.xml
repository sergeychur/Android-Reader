<?xml version="1.0" encoding="utf-8"?>
<!--TODO(sergeychur): fill in normal way-->
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="ru.tp_project.androidreader.model.data_models.Task" />
    </data>


    <LinearLayout
        android:id="@+id/item_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--TODO(sergeychur): change to wrap content with normal photo-->
        <ImageView
            android:id="@+id/bookPreview"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:src="@drawable/left_rounded"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="@{data.name}"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="20sp" />
            <!--TODO(sergeychur):possible shit with rotate, check, maybe place to constants-->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_gravity="center"
                android:rowCount="5"
                android:orientation="vertical">
                <TextView
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_margin="5dp"
                    android:text="Цель:"/>
                <TextView
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_margin="5dp"
                    android:text="18 книг"/>
                <TextView
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_margin="5dp"
                    android:text="1005000 слов"/>
                <TextView
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_margin="5dp"
                    android:text="1005000 страниц"/>
                <!--TODO(sergeychur): move to constants-->
                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_columnSpan="3"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:id="@+id/progressBar"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="80"
                    android:progressTint="@color/colorPrimaryBlue"
                    android:progressBackgroundTint="@color/colorPrimaryBlue"
                    android:secondaryProgressTint="@color/colorPrimaryBlue"
                    android:backgroundTint="@color/colorPrimaryBlue"
                    android:foregroundTint="@color/colorPrimaryBlue"
                    />

                <TextView
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_margin="5dp"
                    android:text="Выполнено:"/>
                <TextView
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_margin="5dp"
                    android:text="18 книг"/>
                <TextView
                    android:layout_column="1"
                    android:layout_row="4"
                    android:layout_margin="5dp"
                    android:text="1005000 слов"/>
                <TextView
                    android:layout_column="2"
                    android:layout_row="4"
                    android:layout_margin="5dp"
                    android:text="1005000 страниц"/>

            </GridLayout>

        </LinearLayout>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_gravity="center"
        android:rowCount="1"
        android:orientation="vertical">
        <Button
            android:text="Статистика"/>
        <Button
            android:text="Редактировать"/>
        <Button
            android:text="Поделиться"/>
    </GridLayout>
</layout>